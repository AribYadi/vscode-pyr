{
  "brackets": [["(", ")"]],
  "autoClosingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^(\\:[^\"]*|\\([^)\"]*|\\\"[^\"]*)$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:if|else|while|func).*?:\\s*$",
      "action": { "indent": "indent" }
    }
  ]
}
